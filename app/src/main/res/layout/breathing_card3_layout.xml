<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".BreathingCard3"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deep
Breathing
Technique"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/layout1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView7"
            android:layout_width="300dp"
            android:layout_height="300dp">





            <VideoView
                android:id="@+id/breathing_video_view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <ImageView
                android:id="@+id/p3"
                android:src="@drawable/p3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <RelativeLayout

            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/c1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:background="@drawable/miniplayer"
            android:padding="10dp"
            android:visibility="invisible">


            <RelativeLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Time"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/timestamp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:text="Total Time"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <TextView
                android:id="@+id/rounds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info"
                android:layout_marginTop="20dp"
                android:text="Rounds completed"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/roundsDigits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rounds"
                android:text="0"
                android:textAlignment="center"
                android:textSize="35dp"
                android:textStyle="bold" />

            <RelativeLayout

                android:id="@+id/c2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rounds"
                android:layout_marginTop="50dp"
                android:background="@drawable/breathng_card"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/points"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/points" />

                <TextView
                    android:id="@+id/pointsDigit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/points"
                    android:text="0"
                    android:textColor="@color/teal_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/pointsDigit"
                    android:text="Zen Points"
                    android:textColor="@color/teal_700"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </RelativeLayout>

        <Button
            android:layout_centerHorizontal="true"
            android:layout_below="@id/layout1"
            android:id="@+id/play_pause_button3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="300dp"
            android:background="#EF5C5C"
            android:text="Start"/>


    </RelativeLayout>


</FrameLayout>